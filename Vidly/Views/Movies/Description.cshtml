@model Vidly.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    string base64String = Convert.ToBase64String(Model.MovieImage.Image, 0, Model.MovieImage.Image.Length);
    string imageUrl = "data:image/png;base64," + base64String;
}

<div class="description">
    <h3>
        "@Model.Movie.Name"
    </h3>

    <h4>
        @Model.Movie.Genre.Name
    </h4>

    <h4>
        The film was released at @Model.Movie.ReleaseDate.ToString("dd/MMM/yyyy")
    </h4>

    <h4>
        Description : @Model.Movie.Description
    </h4>
</div>

<div class="film_image">
    <img src="@imageUrl"/>
</div>


